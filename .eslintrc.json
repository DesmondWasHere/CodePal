{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": "error",
        "@typescript-eslint/semi": "error",
        "curly": "error",
        "indent": ["error",4,{"SwitchCase": 1}],
        "eqeqeq": "error",
        "no-throw-literal": "error",
        "semi": "off"
    }
}
